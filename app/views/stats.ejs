    <script>
        window.onload = function () {
            let category_stats = {
                Food: null,
                Entertainment: null,
                Health: null,
                Clothing: null,
                Electronics: null,
                Travel: null
            }
            let count = 6;
            for (cat in category_stats) {
                let req = new XMLHttpRequest();
                req.open('get', `category_stats?category=${cat}`);
                req.onreadystatechange = (function() {
                    if (req.readyState == XMLHttpRequest.DONE) {
                        category_stats[this] = JSON.parse(req.responseText);
                        count--;
                        if (count == 0) {
                            let cats = ['Food', 'Health', 'Travel'];
                            for (let i = 0; i < 3; i++) {
                                let s = category_stats[cats[i]];
                                let chart_data = [s.userTotal.price, s.friendsTotal.price, s.globalTotal.price];
                                let ctx_bar = document.getElementById(`tagbar${i+1}`).getContext('2d');
                                let tag_bar = f_tag_bar(chart_data);
                                window[`tagbar${i+1}`] = new Chart(ctx_bar, tag_bar);
                                
                                for (let field of ['price', 'quantity']) {
                                    let p_chart_data = s.userTop[field].map(p => p[field]);
                                    let p_chart_labels = s.userTop[field].map(p => p.name);
                                    let p_ctx_bar = document.getElementById(`productbar${i+1}_${field}`).getContext('2d');
                                    let p_product_bar = f_product_bar(p_chart_data, p_chart_labels);
                                    window[`productbar${i+1}_${field}`] = new Chart(p_ctx_bar, p_product_bar);
                                }
                            }
                            //category_stats.Food.userTotal.price
                        }
                    }
                }).bind(cat);
                req.send();
            }

            let totals = null;
            let t_req = new XMLHttpRequest();
            t_req.open('get', '/totals');
            t_req.onreadystatechange = function() {
                if (t_req.readyState == XMLHttpRequest.DONE) {
                    totals = JSON.parse(t_req.responseText);
                    let chart_data = [];
                    let chart_labels = [];
                    for (cat in totals.user) {
                        chart_data.push(totals.user[cat].price);
                        chart_labels.push(cat);
                    }
                    let ctx_bar = document.getElementById('summarypie').getContext('2d');
                    let summary_pie = f_summary_pie(chart_data, chart_labels);
                    window.summaryPie = new Chart(ctx_bar, summary_pie);
                }
            }
            t_req.send();

            let monthTotals = null;
            let m_req = new XMLHttpRequest();
            m_req.open('get', '/month_totals');
            m_req.onreadystatechange = function() {
                if (m_req.readyState == XMLHttpRequest.DONE) {
                    totals = JSON.parse(m_req.responseText);
                    let chart_data = [];
                    let chart_labels = [];
                    for (let i = 0; i < 12; i++) {
                        chart_data.push(totals.user[i].price);
                        chart_labels.push(totals.user[i].start);
                    }
                    let ctx_bar = document.getElementById('summaryspending').getContext('2d');
                    let summary_spending = f_summary_spending(chart_data, chart_labels);
                    window.summarySpending = new Chart(ctx_bar, summary_spending);
                }
            }
            m_req.send();

            /* rest */

